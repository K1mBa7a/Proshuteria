@model proshuteria.Data.MeatCategory

@{
    ViewData["Title"] = "Детайли";
}

<h1>@ViewData["Title"]</h1>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h4>Категория на месото</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Име</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
                <dt class="col-sm-2">Описание</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
                <dt class="col-sm-2">Дата на регистрация</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.RegisterOn)</dd>
            </dl>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редактиране</a> |
    <a asp-action="Index" class="btn btn-secondary">Обратно към списъка</a>
</div>
