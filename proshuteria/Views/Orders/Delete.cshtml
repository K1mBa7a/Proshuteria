@model proshuteria.Data.Order

@{
    ViewData["Title"] = "Изтриване";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h3 class="text-center">Сигурни ли сте, че искате да изтриете това?</h3>
            <div>
                <h4>Поръчка</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">Клиент</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Clients.UserName)</dd>
                    <dt class="col-sm-2">Месо</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Meats.Name)</dd>
                    <dt class="col-sm-2">Количество</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Quantity)</dd>
                </dl>
            </div>
            <div class="mt-3">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Изтрий</button>
                    <a asp-action="Index" class="btn btn-secondary">Обратно към списъка</a>
                </form>
            </div>
        </div>
    </div>
</div>
